<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.masa.taskmanager.Pocetna">

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/btnNoviZad"
        android:text="@string/zadatak"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnStatistika"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:text="@string/statistika"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/btnStatistika"
        app:layout_constraintLeft_toRightOf="@id/btnNoviZad"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
